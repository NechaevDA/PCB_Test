<UserControl x:Class="PCB_Test.UI.Controls.ValidationTextBox"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCB_Test.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="InputTextBox" Text="{Binding Input, UpdateSourceTrigger=PropertyChanged, ElementName=Root, Mode=TwoWay}" Grid.Row="0"/>
        <TextBlock x:Name="ErrorTextBlock" Grid.Row="1"/>
    </Grid>
</UserControl>
